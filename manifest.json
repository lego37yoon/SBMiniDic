{
    "manifest_version": 2,
    "name": "Sinabro Small Dictionary",
    "version": "1.0",
    "permissions": ["menus", "clipboardWrite"],

    "description": "Unofficial Dictionary Add-On based on Daum Dictionary and kakao i translate service",
    "author": "paperbox",
    "homepage_url": "https://github.com/lego37yoon/SBMiniDic",
    "icons": {
        "48": "icons.svg",
        "96": "icons.svg"
    },

    "options_ui": {
        "page": "contents/popup.html",
        "browser_style": true
    },
    "browser_action": {
        "default_icon": "icons.svg",
        "default_title": "Sinabro MiniDic",
        "default_popup": "contents/popup.html"
    },
    "content_scripts": [{
        "js": ["use.js"],
        "matches": ["<all_urls>"]
    }]
}